# simple-interest
// 7th program on c
#include<stdio.h>
int main()
{
int p,r,t,si;
printf("Enter the principle \n");
scanf("%d",&p);

printf("Enter the amount of interest \n");
scanf("%d",&r);

printf("Enter the time period \n");
scanf("%d",&t);

si=(p*r*t)/100;
 printf("The simple intererst is %d", si);
return(0);
}
